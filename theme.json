{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1200px"
    },
    "color": {
      "palette": [
        {
          "color": "#111",
          "name": "Primary",
          "slug": "primary"
        },
        {
          "color": "#fff",
          "name": "Secondary",
          "slug": "secondary"
        },
        {
          "color": "#e8e8e8",
          "name": "Tertiary",
          "slug": "tertiary"
        }
      ]
    },
    "border": {
      "radius": true,
      "color": true,
      "style": true,
      "width": true
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "'Inter', sans-serif",
          "slug": "inter",
          "name": "Inter",
          "fontFace": [
            {
              "fontFamily": "'Inter', sans-serif",
              "fontWeight": "400",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/static/Inter-Regular.ttf"]
            }
          ]
        }
      ],
      "fontSizes": [
        {
					"slug": "nav-link",
					"size": "clamp(0.7rem, 0.5504rem + 0.6385vw, 1.125rem)",
					"name": "Nav Link"
				}
      ],
      "lineHeight": true
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"],
      "blockGap": true
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "lineHeight": "1.7",
      "fontSize": "1rem",
      "fontWeight": "400"
    },
    "elements": {
      "button": {
        "border": {
          "radius": "5px",
          "style" : "solid",
          "width": "2px"
        },
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "white"
        },
        ":hover": {
          "color": {
            "background": "transparent",
            "text": "var(--wp--preset--color--primary)"
          },
          "border": {
						"color": "var(--wp--preset--color--primary)",
						"radius": "5px",
						"style": "solid",
            "width": "2px"
					}
        }
      },
      "link":{
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        "typography": {
          "textDecoration": "none"
        }
      },
      
      "h1": {
        "typography": {
          "fontWeight": "800",
          "lineHeight": "1.3",
          "fontSize": "clamp(2rem, 1.6479rem + 1.5023vw, 3rem)"
        }
      },
      "h2": {
        "typography": {
          "fontWeight": "545",
          "lineHeight": "1",
          "fontSize": "clamp(1rem, 0.4718rem + 2.2535vw, 2.5rem)"
        }
      },
      "h3": {
        "typography": {
          "fontWeight": "550",
          "lineHeight": "0.8",
          "fontSize": "clamp(1rem, 0.9296rem + 0.3005vw, 1.2rem)"
        }
      }
    },
    "blocks": {
      "core/navigation-link": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--nav-link)"
        }
      },
      "core/navigation-submenu": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--nav-link)"
        }
      },
      "core/latest-posts": {
				"elements": {
					"link": {
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						":focus": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						":active": {
							"color": {
								"text": "var(--wp--preset--color--primary)"
							},
							"typography": {
								"textDecoration": "none"
							}
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
      "core/archives": {
				"elements": {
					"link": {
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						":focus": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						":active": {
							"color": {
								"text": "var(--wp--preset--color--primary)"
							},
							"typography": {
								"textDecoration": "none"
							}
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
      "core/post-author-name": {
        "elements": {
          "link": {
            ":hover": {
              "typography": {
                "textDecoration": "underline"
              }
            }
          }
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "area": "header",
      "title": "Header"
    },
    {
      "name": "footer",
      "area": "footer",
      "title": "Footer"
    }
  ]
}